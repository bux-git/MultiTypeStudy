<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/user_avatar"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_left"
            android:textColor="@color/black_3"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="不修"/>
        <LinearLayout
            android:id="@+id/llt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:gravity="center"
                android:text="更多"
                android:textColor="@color/black_3"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_arrows"
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="#ececec"></View>

    <LinearLayout
        android:id="@+id/llt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@color/black5"
        tools:layout_height="108dp">
    </LinearLayout>

    <TextView
        android:id="@+id/tv_replace"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="换一批"
        android:textColor="@color/black_3"
        android:textSize="14sp"/>
</LinearLayout>